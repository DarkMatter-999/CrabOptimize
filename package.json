{
  "name": "plugin-skeleton",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "init": "node ./bin/init.js",
    "start": "wasm-pack build wasm --dev --target web; wp-scripts start --source-path=assets/src --output-path=assets/build",
    "build": "wasm-pack build wasm --target web; wp-scripts build --source-path=assets/src --output-path=assets/build",
    "prepare": "husky",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "wp-scripts lint-style",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:js": "wp-scripts lint-js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:php": "vendor/bin/phpcs .",
    "lint:php:fix": "vendor/bin/phpcbf .",
    "lint:staged": "lint-staged",
    "test": "npm-run-all --parallel test:* type-check",
    "test:js": "vitest",
    "test:js:ui": "vitest --ui",
    "test:js:coverage": "vitest --coverage",
    "test:php": "vendor/bin/pest -c pest.xml",
    "test:php:coverage": "vendor/bin/pest -c pest.xml --coverage",
    "type-check": "vendor/bin/phpstan analyse --memory-limit=512M",
    "wp-env": "wp-env",
    "wp-env:start": "wp-env start",
    "wp-env:stop": "wp-env stop",
    "wp-env:destroy": "wp-env destroy",
    "wp-env:clean": "wp-env clean all",
    "wp-env:logs": "wp-env logs"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@wordpress/env": "^10.39.0",
    "@wordpress/scripts": "^30.18.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "msw": "^2.12.9",
    "path": "^0.12.7",
    "vitest": "^4.0.18",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "dependencies": {
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5"
  }
}